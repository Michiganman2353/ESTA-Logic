{
  "name": "@esta-logic/helix",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/helix/src",
  "projectType": "library",
  "tags": ["scope:helix", "type:library"],
  "targets": {
    "build": {
      "executor": "nx:run-commands",
      "options": {
        "command": "if which gleam > /dev/null 2>&1; then gleam deps download --all && gleam build; else echo 'Gleam not installed - skipping helix build'; fi",
        "cwd": "packages/helix"
      },
      "outputs": ["{projectRoot}/build"],
      "inputs": ["{projectRoot}/src/**/*.gleam", "{projectRoot}/gleam.toml"]
    },
    "test": {
      "executor": "nx:run-commands",
      "options": {
        "command": "if which gleam > /dev/null 2>&1; then gleam deps download --all && gleam test; else echo 'Gleam not installed - skipping helix tests'; fi",
        "cwd": "packages/helix"
      },
      "inputs": [
        "{projectRoot}/src/**/*.gleam",
        "{projectRoot}/test/**/*.gleam",
        "{projectRoot}/gleam.toml"
      ]
    },
    "test:json": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          "mkdir -p ../../test-output",
          "if which gleam > /dev/null 2>&1; then gleam deps download --all && gleam test 2>&1 | tee ../../test-output/helix-tests.json; else echo 'Gleam not installed - skipping helix tests' > ../../test-output/helix-tests.json; fi"
        ],
        "cwd": "packages/helix",
        "parallel": false
      },
      "outputs": ["{workspaceRoot}/test-output/helix-tests.json"],
      "inputs": [
        "{projectRoot}/src/**/*.gleam",
        "{projectRoot}/test/**/*.gleam",
        "{projectRoot}/gleam.toml"
      ],
      "configurations": {
        "ci": {
          "options": {
            "commands": [
              "mkdir -p ../../test-output",
              "gleam deps download --all",
              "gleam test 2>&1 | tee ../../test-output/helix-tests.json"
            ]
          }
        }
      }
    },
    "ci": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          "if which gleam > /dev/null 2>&1; then gleam deps download --all && gleam test; else echo 'Gleam not installed - skipping helix CI'; fi"
        ],
        "cwd": "packages/helix",
        "parallel": false
      }
    },
    "test:coverage": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          "if which gleam > /dev/null 2>&1; then gleam deps download --all && gleam test; else echo 'Gleam not installed - skipping helix coverage'; fi"
        ],
        "cwd": "packages/helix",
        "parallel": false
      },
      "inputs": [
        "{projectRoot}/src/**/*.gleam",
        "{projectRoot}/test/**/*.gleam",
        "{projectRoot}/gleam.toml"
      ]
    },
    "lint": {
      "executor": "nx:run-commands",
      "options": {
        "command": "echo 'Gleam lint handled by compiler'",
        "cwd": "packages/helix"
      },
      "inputs": [
        "{projectRoot}/src/**/*.gleam",
        "{projectRoot}/test/**/*.gleam"
      ]
    },
    "clean": {
      "executor": "nx:run-commands",
      "options": {
        "command": "rm -rf build",
        "cwd": "packages/helix"
      }
    },
    "typecheck": {
      "executor": "nx:run-commands",
      "options": {
        "command": "if which gleam > /dev/null 2>&1; then gleam deps download --all && gleam build; else echo 'Gleam not installed - skipping typecheck'; fi",
        "cwd": "packages/helix"
      },
      "inputs": ["{projectRoot}/src/**/*.gleam", "{projectRoot}/gleam.toml"]
    }
  }
}
