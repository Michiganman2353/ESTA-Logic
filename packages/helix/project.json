{
  "name": "@esta-logic/helix",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/helix/src",
  "projectType": "library",
  "tags": ["type:lib", "scope:core", "lang:gleam"],
  "targets": {
    "build": {
      "executor": "nx:run-commands",
      "options": {
        "command": "echo 'Gleam build: Run gleam build manually if Gleam is installed'",
        "cwd": "packages/helix"
      },
      "outputs": ["{projectRoot}/build"]
    },
    "test": {
      "executor": "nx:run-commands",
      "options": {
        "command": "echo 'Gleam tests: Run gleam test manually if Gleam is installed'",
        "cwd": "packages/helix"
      }
    },
    "clean": {
      "executor": "nx:run-commands",
      "options": {
        "command": "rm -rf build",
        "cwd": "packages/helix"
      }
    }
  }
}
