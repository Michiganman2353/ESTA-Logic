{
  "$schema": "https://esta-logic.dev/schemas/v1/capability-manifest.json",
  "service_id": "ui-sync-service",
  "version": "1.0.0",
  "kernel_boundary_integration": {
    "module": "@esta/kernel-boundary",
    "capability_validator": "libs/kernel-boundary/src/capability.ts",
    "ipc_module": "libs/kernel-boundary/src/ipc.ts"
  },
  "capabilities": [
    {
      "id": "ui:push:state",
      "resource_type": "channel",
      "rights": ["write"],
      "description": "Push state updates to UI components",
      "scope": ["all_ui_components"],
      "delegatable": false
    },
    {
      "id": "messaging:send:ipc",
      "resource_type": "channel",
      "rights": ["write"],
      "description": "Send UI events to services",
      "scope": ["all_services"],
      "delegatable": true
    },
    {
      "id": "messaging:receive:ipc",
      "resource_type": "channel",
      "rights": ["read"],
      "description": "Receive state updates from services",
      "scope": ["all_services"],
      "delegatable": false
    }
  ]
}
