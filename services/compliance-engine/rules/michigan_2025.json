{
  "version": "2025.1",
  "state": "michigan",
  "effective_date": "2025-02-21",
  "rules": [
    {
      "id": "mi-esta-accrual-rate",
      "description": "Accrual rate of 1 hour per 30 hours worked",
      "rate": {
        "hours_accrued": 1,
        "hours_worked": 30
      }
    },
    {
      "id": "mi-esta-max-accrual-small",
      "description": "Maximum accrual for small employers (< 10 employees)",
      "condition": {
        "employer_size": "< 10"
      },
      "max_hours": 40
    },
    {
      "id": "mi-esta-max-accrual-large",
      "description": "Maximum accrual for large employers (>= 10 employees)",
      "condition": {
        "employer_size": ">= 10"
      },
      "max_hours": 72
    },
    {
      "id": "mi-esta-carryover",
      "description": "Unused time carries over to next year",
      "carryover": true,
      "max_carryover_hours": 72
    },
    {
      "id": "mi-esta-usage-increment",
      "description": "Minimum increment for using sick time",
      "increment_hours": 1
    }
  ]
}
