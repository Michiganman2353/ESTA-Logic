{
  "$schema": "https://esta-logic.dev/schemas/v1/capability-manifest.json",
  "service_id": "employer-engine",
  "version": "1.0.0",
  "kernel_boundary_integration": {
    "module": "@esta/kernel-boundary",
    "capability_validator": "libs/kernel-boundary/src/capability.ts"
  },
  "capabilities": [
    {
      "id": "db:read:employer",
      "resource_type": "database",
      "rights": ["read", "list"],
      "description": "Read employer and employee data",
      "scope": ["employer_records", "employee_records"],
      "delegatable": false
    },
    {
      "id": "db:write:employer",
      "resource_type": "database",
      "rights": ["write", "create", "delete"],
      "description": "Write employer and employee updates",
      "scope": ["employer_records", "employee_records"],
      "delegatable": false
    },
    {
      "id": "messaging:send:ipc",
      "resource_type": "channel",
      "rights": ["write"],
      "description": "Send employer events",
      "scope": ["accrual-engine", "compliance-engine", "ui-sync-service"],
      "delegatable": true
    },
    {
      "id": "messaging:receive:ipc",
      "resource_type": "channel",
      "rights": ["read"],
      "description": "Receive employer requests",
      "scope": ["user-session", "ui-sync-service"],
      "delegatable": false
    }
  ]
}
