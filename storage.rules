rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    
    // Helper functions
    function isAuthenticated() {
      return request.auth != null;
    }
    
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }
    
    function belongsToTenant(tenantId) {
      return isAuthenticated() && request.auth.token.tenantId == tenantId;
    }
    
    function isEmployer() {
      return request.auth.token.role == 'employer' || 
             request.auth.token.role == 'admin';
    }
    
    function isValidFileType() {
      return request.resource.contentType.matches('image/.*') ||
             request.resource.contentType.matches('application/pdf') ||
             request.resource.contentType == 'application/octet-stream'; // For encrypted files
    }
    
    function isValidFileSize() {
      return request.resource.size < 10 * 1024 * 1024; // 10MB max
    }
    
    // Enhanced validation for scanned documents
    function isValidScannedDocument() {
      return (request.resource.contentType.matches('image/webp') ||
              request.resource.contentType.matches('image/jpeg') ||
              request.resource.contentType.matches('image/png') ||
              request.resource.contentType == 'application/octet-stream') && // Encrypted
             request.resource.size < 10 * 1024 * 1024; // 10MB max
    }
    
    // Check for encrypted document metadata
    function isEncryptedDocument() {
      return 'encrypted' in request.resource.metadata && 
             request.resource.metadata.encrypted == 'true';
    }
    
    // Rate limiting check (requires metadata tracking)
    function isWithinRateLimit() {
      // NOTE: This is a placeholder - actual rate limiting MUST be done server-side
      // Storage rules cannot directly query Firestore for rate limit checks
      // Server-side Cloud Functions should track and enforce rate limits
      // See examples/server-side-upload-verification.ts for implementation
      return true;
    }
    
    // Check if a PTO request is approved (requires Firestore lookup)
    // Note: Storage rules cannot directly query Firestore, so immutability
    // will be enforced via metadata and backend validation
    function isDocumentMutable() {
      // Documents can only be written if metadata indicates request is not approved
      // The 'approved' metadata field will be set by the backend
      return !('approved' in resource.metadata) || resource.metadata.approved == 'false';
    }
    
    // User profile pictures
    match /profile-pictures/{userId}/{fileName} {
      allow read: if isAuthenticated();
      allow write: if isOwner(userId) && 
                      isValidFileType() && 
                      isValidFileSize();
    }
    
    // Company documents (ESTA posters, policy documents, etc.)
    match /company-documents/{tenantId}/{fileName} {
      allow read: if belongsToTenant(tenantId);
      allow write: if isEmployer() && 
                      belongsToTenant(tenantId) &&
                      isValidFileType() &&
                      isValidFileSize();
    }
    
    // Employee documents (medical notes, proof of illness, etc.)
    match /employee-documents/{tenantId}/{userId}/{fileName} {
      // Employees can upload their own documents
      allow read: if isOwner(userId) || 
                     (isEmployer() && belongsToTenant(tenantId));
      allow write: if isOwner(userId) && 
                      belongsToTenant(tenantId) &&
                      isValidFileType() &&
                      isValidFileSize();
      allow delete: if isEmployer() && belongsToTenant(tenantId);
    }
    
    // Sick time request attachments (LEGACY - kept for backwards compatibility)
    match /request-attachments/{tenantId}/{requestId}/{fileName} {
      allow read: if belongsToTenant(tenantId);
      allow write: if belongsToTenant(tenantId) &&
                      isValidFileType() &&
                      isValidFileSize();
    }
    
    // NEW: Hierarchical document structure for PTO requests
    // tenants/{tenantId}/employees/{employeeId}/documents/{requestId}/{fileName}
    match /tenants/{tenantId}/employees/{employeeId}/documents/{requestId}/{fileName} {
      // Employees can read their own documents, employers can read all in their tenant
      allow read: if (isOwner(employeeId) && belongsToTenant(tenantId)) ||
                     (isEmployer() && belongsToTenant(tenantId));
      
      // Only employees can upload to their own folder
      // Documents cannot be uploaded if already marked as approved
      allow create: if isOwner(employeeId) && 
                       belongsToTenant(tenantId) &&
                       isValidScannedDocument() &&
                       isWithinRateLimit();
      
      // Updates and deletes are not allowed once created (immutability for compliance)
      // Exception: can update metadata if not approved
      allow update: if isOwner(employeeId) && 
                       belongsToTenant(tenantId) &&
                       isDocumentMutable();
      
      // Only employers can delete documents, and only if not approved
      allow delete: if isEmployer() && 
                       belongsToTenant(tenantId) &&
                       isDocumentMutable();
    }
    
    // NEW: Scanned documents from DocumentScanner component
    // Supports both direct uploads and encrypted uploads
    match /scanned-documents/{tenantId}/{userId}/{documentId}/{fileName} {
      // Read access: owner or employer in same tenant
      allow read: if (isOwner(userId) && belongsToTenant(tenantId)) ||
                     (isEmployer() && belongsToTenant(tenantId));
      
      // Create: authenticated user uploading to their own folder with valid document
      allow create: if isOwner(userId) && 
                       belongsToTenant(tenantId) &&
                       isValidScannedDocument() &&
                       isWithinRateLimit();
      
      // Update: only metadata updates for owner, not file content
      allow update: if isOwner(userId) && 
                       belongsToTenant(tenantId) &&
                       request.resource.size == resource.size; // No file content change
      
      // Delete: only owner or employer (with restrictions)
      allow delete: if (isOwner(userId) || isEmployer()) && 
                       belongsToTenant(tenantId) &&
                       isDocumentMutable();
    }
    
    // NEW: Document capture with tightened security
    // Path: documents/{tenantId}/{userId}/{timestamp}-{filename}
    match /documents/{tenantId}/{userId}/{fileName} {
      // Read: owner or employer in same tenant
      allow read: if (isOwner(userId) && belongsToTenant(tenantId)) ||
                     (isEmployer() && belongsToTenant(tenantId));
      
      // Create: authenticated user uploading to their own folder
      // Requires valid document type and size
      allow create: if isOwner(userId) && 
                       belongsToTenant(tenantId) &&
                       (request.resource.contentType == 'image/jpeg' ||
                        request.resource.contentType == 'image/png' ||
                        request.resource.contentType == 'image/webp' ||
                        request.resource.contentType == 'application/pdf') &&
                       request.resource.size < 10 * 1024 * 1024 && // 10MB max
                       request.resource.size > 0; // Not empty
      
      // Update: metadata only, no file content changes
      allow update: if isOwner(userId) && 
                       belongsToTenant(tenantId) &&
                       request.resource.size == resource.size;
      
      // Delete: only owner or employer
      allow delete: if (isOwner(userId) || isEmployer()) && 
                       belongsToTenant(tenantId);
    }
    
    // Default: deny all other access
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
