{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Marketing Blueprint v1",
  "type": "object",
  "required": ["schemaVersion", "slug", "title", "blocks"],
  "properties": {
    "schemaVersion": {
      "type": "string",
      "description": "Schema version for this blueprint (e.g., '1.0.0')"
    },
    "slug": {
      "type": "string",
      "pattern": "^[a-z0-9-]+$",
      "description": "URL-friendly identifier for the page"
    },
    "title": {
      "type": "string",
      "minLength": 1,
      "description": "Page title for SEO and browser tab"
    },
    "meta": {
      "type": "object",
      "properties": {
        "description": {
          "type": "string",
          "description": "Meta description for SEO"
        },
        "ogImage": {
          "type": "string",
          "description": "Open Graph image URL for social sharing"
        }
      },
      "additionalProperties": false
    },
    "blocks": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["type", "props"],
        "properties": {
          "type": {
            "type": "string",
            "description": "Component type from the component registry"
          },
          "props": {
            "type": "object",
            "description": "Props to pass to the component"
          }
        },
        "additionalProperties": false
      },
      "description": "Array of content blocks to render on the page"
    }
  },
  "additionalProperties": false
}
