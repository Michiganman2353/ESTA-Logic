{
  "name": "esta-tracker-monorepo",
  "version": "2.0.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "libs/*",
    "packages/*",
    "logic/*",
    "api",
    "functions",
    "infra/*"
  ],
  "scripts": {
    "build:frontend": "npx nx build frontend",
    "build:backend": "npx nx build backend",
    "build": "npx nx run-many --target=build --all",
    "test": "npx nx run-many --target=test --all",
    "demo": "npx ts-node --project demo/tsconfig.json demo/kernel-demo.ts",
    "gleam:build": "bash scripts/build-gleam-wasm.sh",
    "wasm:build": "nx run accrual-engine:wasm-build",
    "wasm:test": "nx run accrual-engine:wasm-test",
    "tauri:dev": "tauri dev",
    "tauri:build": "tauri build",
    "dev": "nx run-many --target=dev --all",
    "dev:frontend": "nx dev frontend",
    "dev:backend": "nx dev backend",
    "build:all": "nx run-many --target=build --all --parallel=3",
    "build:libs": "nx run-many --target=build --projects=shared-types,shared-utils,accrual-engine,esta-firebase,csv-processor",
    "build:functions": "nx build functions",
    "build:affected": "nx affected --target=build",
    "test:frontend": "nx test frontend",
    "test:backend": "nx test backend",
    "test:coverage": "nx run-many --target=test:coverage --all",
    "test:affected": "nx affected --target=test",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:debug": "playwright test --debug",
    "test:perf": "vitest run --config test/performance/vitest.config.ts",
    "test:perf:watch": "vitest --config test/performance/vitest.config.ts",
    "perf:check": "node scripts/check-performance-budgets.js",
    "perf:check:ci": "node scripts/check-performance-budgets.js --ci",
    "lint": "nx run-many --target=lint --all",
    "lint:fix": "nx run-many --target=lint --all -- --fix",
    "lint:affected": "nx affected --target=lint",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\" --ignore-path .gitignore",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,md}\" --ignore-path .gitignore",
    "typecheck": "nx run-many --target=typecheck --all",
    "typecheck:affected": "nx affected --target=typecheck",
    "clean": "nx run-many --target=clean --all && rm -rf node_modules packages/*/node_modules .nx",
    "clean:all": "npm run clean && rm -rf apps/*/dist libs/*/dist packages/*/dist functions/lib api/dist .nx/cache",
    "postinstall": "npm run postinstall --workspaces --if-present",
    "prepare": "husky || echo 'Husky not available (CI environment)'",
    "setup:kms": "node scripts/setup-kms.js",
    "validate:deployment": "bash scripts/validate-deployment.sh",
    "validate:vercel": "node scripts/validate-vercel-config.js",
    "validate:tsconfig": "node scripts/validate-tsconfig-paths.js",
    "validate:workspace": "nx graph --file=/tmp/nx-graph.json && echo 'Workspace graph validated'",
    "ci:validate": "npm run lint && npm run typecheck && npm run test && npm run build && npm run validate:deployment && npm run validate:vercel",
    "docs": "echo 'Install typedoc with: npm install -D typedoc && npx typedoc'",
    "health:check": "node scripts/health-check.js",
    "sbom": "bash scripts/generate-sbom.sh",
    "firebase:emulators": "nx run firebase-infra:emulators",
    "firebase:deploy": "nx run firebase-infra:deploy:all",
    "firebase:deploy:rules": "nx run firebase-infra:deploy:rules",
    "graph": "nx graph",
    "affected": "nx affected",
    "audit": "npm audit --audit-level=moderate",
    "audit:fix": "npm audit fix"
  },
  "dependencies": {
    "esbuild": "^0.27.2",
    "firebase-admin": "^12.0.0",
    "p-limit": "^3.1.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@nx/eslint": "^22.1.2",
    "@nx/eslint-plugin": "^22.1.2",
    "@nx/node": "^22.1.2",
    "@nx/react": "^22.1.2",
    "@nx/workspace": "^22.1.2",
    "@playwright/test": "^1.56.1",
    "concurrently": "^9.2.1",
    "dotenv": "^17.2.3",
    "eslint": "^9.39.1",
    "globals": "^16.5.0",
    "husky": "^9.0.0",
    "lint-staged": "^15.0.0",
    "nx": "^22.1.2",
    "playwright": "^1.56.1",
    "prettier": "^3.2.0",
    "prettier-plugin-tailwindcss": "^0.6.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx,json,md,yml,yaml}": [
      "prettier --write"
    ]
  },
  "overrides": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "undici": "^6.21.0",
    "@vercel/node": {
      "path-to-regexp": "6.3.0"
    }
  },
  "engines": {
    "node": ">=20 <=22",
    "npm": ">=10.0.0"
  },
  "packageManager": "npm@10.2.3"
}
