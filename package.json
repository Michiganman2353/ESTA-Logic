{
  "name": "esta-tracker-local",
  "version": "1.0.0",
  "private": true,
  "description": "Local ESTA Sick Time Tracker for Michigan Employers â€“ Secure, Offline, Liability-Free.",
  "author": "Michiganman2353 <your-email@example.com>",
  "repository": {
    "type": "git",
    "url": "https://github.com/Michiganman2353/esta-tracker-clean.git"
  },
  "keywords": [
    "esta",
    "sick-time",
    "tracker",
    "local",
    "electron",
    "sqlite",
    "hr",
    "michigan"
  ],
  "license": "Proprietary",  // From your ironclad
  "main": "public/electron.js",
  "homepage": "./",
  "bugs": {
    "url": "https://github.com/Michiganman2353/esta-tracker-clean/issues"
  },
  "dependencies": {
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-router-dom": "^6.26.2"
  },
  "devDependencies": {
    "electron": "^29.3.0",
    "electron-builder": "^24.13.3",
    "sqlite3": "^5.1.7",
    "@testing-library/react": "^14.3.1",
    "@testing-library/jest-dom": "^6.5.0",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "typescript": "^5.5.3",
    "eslint": "^8.57.0",
    "prettier": "^3.2.5"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "electron": "electron .",
    "electron-dev": "concurrently \"npm start\" \"wait-on http://localhost:3000 && electron .\"",
    "dist": "npm run build && electron-builder",
    "lint": "eslint . --ext .js,.jsx --fix",
    "format": "prettier --write \"**/*.{js,jsx,json,css,md}\"",
    "type-check": "tsc --noEmit"
  },
  "build": {
    "appId": "com.michiganman2353.estatracker",
    "productName": "ESTA Tracker Local",
    "directories": {
      "output": "dist"
    },
    "files": [
      "build/**/*",
      "node_modules/**/*",
      "public/electron.js"
    ],
    "mac": {
      "category": "public.app-category.productivity"
    },
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": "AppImage"
    }
  },
  "eslintConfig": {
    "extends": ["react-app", "prettier"],
    "rules": {
      "react/prop-types": "off"
    }
  },
  "browserslist": {
    "production": [">0.2%", "not dead"],
    "development": ["last 1 chrome version", "last 1 firefox version"]
  },
  "engines": {
    "node": ">=18.0.0"
  }
}