{
  "name": "esta-tracker-monorepo",
  "version": "2.0.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "libs/*",
    "packages/*",
    "logic/*",
    "api",
    "functions",
    "infra/*"
  ],
  "scripts": {
    "build:frontend": "npx nx build frontend",
    "build": "npm run build:frontend",
    "dev": "npm run dev:frontend",
    "dev:frontend": "nx dev frontend",
    "lint": "nx run-many --target=lint --all",
    "lint:fix": "nx run-many --target=lint --all -- --fix",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\" --ignore-path .gitignore",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,md}\" --ignore-path .gitignore",
    "clean": "nx run-many --target=clean --all && rm -rf node_modules packages/*/node_modules .nx",
    "postinstall": "npm run postinstall --workspaces --if-present",
    "prepare": "husky || echo 'Husky not available (CI environment)'"
  },
  "dependencies": {
    "esbuild": "^0.27.2",
    "firebase-admin": "^12.0.0",
    "p-limit": "^3.1.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@nx/eslint": "^22.1.2",
    "@nx/eslint-plugin": "^22.1.2",
    "@nx/node": "^22.1.2",
    "@nx/react": "^22.1.2",
    "@nx/workspace": "^22.1.2",
    "@playwright/test": "^1.56.1",
    "concurrently": "^9.2.1",
    "dotenv": "^17.2.3",
    "eslint": "^9.39.1",
    "globals": "^16.5.0",
    "husky": "^9.0.0",
    "lint-staged": "^15.0.0",
    "nx": "^22.1.2",
    "playwright": "^1.56.1",
    "prettier": "^3.2.0",
    "prettier-plugin-tailwindcss": "^0.6.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx,json,md,yml,yaml}": [
      "prettier --write"
    ]
  },
  "overrides": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "undici": "^6.21.0",
    "@vercel/node": {
      "path-to-regexp": "6.3.0"
    },
    "glob": "^10.0.0",
    "inflight": "npm:@alcalzone/inflight@^1.0.0",
    "svgo": "^3.0.0",
    "stable": "npm:@exodus/stable@^1.0.0"
  },
  "engines": {
    "node": "24.x",
    "npm": ">=10.0.0"
  },
  "packageManager": "npm@10.2.3"
}
